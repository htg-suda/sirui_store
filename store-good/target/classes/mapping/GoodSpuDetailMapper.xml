<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.htg.good.mapper.GoodSpuDetailMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.htg.common.entity.GoodSpuDetail">
        <id column="spu_id" property="spuId"/>
        <result column="create_user" property="createUser"/>
        <result column="update_user" property="updateUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="sub_img" property="subImg"/>
        <result column="detail_desc" property="detailDesc"/>
        <result column="collect_num" property="collectNum"/>
        <result column="del_flag" property="delFlag"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        create_user,
        update_user,
        create_time,
        update_time,
        spu_id, sub_img, detail_desc, collect_num, del_flag
    </sql>
    <select id="selectBySpuId" resultType="com.htg.common.entity.GoodSpuDetail" parameterType="integer">
        select
        <include refid="Base_Column_List"/>
        from where spu_id=#{spuId}
    </select>

</mapper>
