<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.htg.good.mapper.GoodSpuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.htg.common.entity.GoodSpu">
        <id column="id" property="id"/>
        <result column="create_user" property="createUser"/>
        <result column="update_user" property="updateUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="store_id" property="storeId"/>
        <result column="category_id" property="categoryId"/>
        <result column="cate_ids" property="cateIds"/>
        <result column="brand_id" property="brandId"/>
        <result column="name" property="name"/>
        <result column="sub_title" property="subTitle"/>
        <result column="main_img" property="mainImg"/>
        <result column="promotion_type" property="promotionType"/>
        <result column="pay_num" property="payNum"/>
        <result column="evaluate_num" property="evaluateNum"/>
        <result column="general_spec_value_snapshot" property="generalSpecValueSnapshot"/>
        <result column="freight" property="freight"/>
        <result column="state" property="state"/>
        <result column="state_remark" property="stateRemark"/>
        <result column="verify" property="verify"/>
        <result column="verify_remark" property="verifyRemark"/>
        <result column="pack_list" property="packList"/>
        <result column="after_sell" property="afterSell"/>
        <result column="del_flag" property="delFlag"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        create_user,
        update_user,
        create_time,
        update_time,
        id, store_id, category_id, cate_ids, brand_id, name, sub_title, main_img, promotion_type, pay_num, evaluate_num, general_spec_value_snapshot, freight, state, state_remark, verify, verify_remark, pack_list, after_sell, del_flag
    </sql>

    <select id="selectByPage" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sr_good_spu
        <where>
            <if test="storeId!=null">
                store_id=#{storeId}
            </if>
            <if test="categoryId!=null">
                category_id=#{categoryId}
            </if>
            <if test="brandId!=null">
                and brand_id=#{brandId}
            </if>
            <if test="name!=null">
               and name like #{name}
            </if>
        </where>
    </select>

</mapper>
